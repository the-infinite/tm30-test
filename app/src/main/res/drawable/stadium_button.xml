<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00579C" /> <!-- Darker blue for pressed state -->
            <corners android:radius="100dp" /> <!-- Adjust radius for desired roundness -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2603D3" /> <!-- Blue background -->
            <corners android:radius="100dp" /> <!-- Adjust radius for desired roundness -->
        </shape>
    </item>
</selector>